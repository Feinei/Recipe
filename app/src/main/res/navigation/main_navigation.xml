<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_cals">

    <keep_state_fragment
        android:id="@+id/navigation_fridge"
        android:name="com.example.recipe.ui.navigation.container.FridgeContainerFragment"
        android:label="Fridge"
        tools:layout="@layout/fragment_fridge" />

    <keep_state_fragment
        android:id="@+id/navigation_cals"
        android:name="com.example.recipe.ui.navigation.container.CaloriesContainerFragment"
        android:label="Cals"
        tools:layout="@layout/fragment_calories" />

    <keep_state_fragment
        android:id="@+id/navigation_recipe"
        android:name="com.example.recipe.ui.navigation.container.RecipeContainerFragment"
        android:label="Recipe"
        tools:layout="@layout/fragment_recipe" />
</navigation>
